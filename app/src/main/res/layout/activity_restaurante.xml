<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RestauranteActivity">

    <!-- Imagem de capa -->
    <ImageView
        android:id="@+id/imgCapa"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão voltar -->
    <ImageButton
        android:id="@+id/btnVoltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_white_bg"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Voltar"
        app:layout_constraintTop_toTopOf="@id/imgCapa"
        app:layout_constraintStart_toStartOf="@id/imgCapa"
        android:elevation="8dp" />

    <!-- Nome e logo alinhados -->
    <TextView
        android:id="@+id/txtNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Outback steakhouse"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgCapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgLogo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="@id/txtNome"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/txtTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurante"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtNome"
        app:layout_constraintStart_toStartOf="@id/txtNome"
        android:layout_marginTop="4dp" />

    <!-- Destaques (horizontal) -->
    <TextView
        android:id="@+id/txtDestaques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destaques"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txtTipo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Card Frango -->
    <ImageView
        android:id="@+id/imgFrango"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/frango_especial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDestaques"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtPrecoFrango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 59,90"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgFrango"
        app:layout_constraintStart_toStartOf="@id/imgFrango"
        android:layout_marginTop="4dp" />
    <TextView
        android:id="@+id/txtNomeFrango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frango especial"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txtPrecoFrango"
        app:layout_constraintStart_toStartOf="@id/imgFrango"
        android:layout_marginTop="2dp" />

    <!-- Card Combo -->

    <ImageView
        android:id="@+id/imgCombo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/combo"
        app:layout_constraintStart_toEndOf="@id/imgFrango"
        app:layout_constraintTop_toTopOf="@id/imgFrango"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtPrecoBrownie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="R$ 24,90"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imgBrownie"
        app:layout_constraintTop_toBottomOf="@id/imgBrownie" />

    <TextView
        android:id="@+id/txtPrecoCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="R$ 30,00"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imgCombo"
        app:layout_constraintTop_toBottomOf="@id/imgCombo" />

    <ImageView
        android:id="@+id/imgBrownie"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thunder_brownie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCombo"
        app:layout_constraintTop_toTopOf="@id/imgFrango"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/txtNomeCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Combo + MilkShake"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/imgCombo"
        app:layout_constraintTop_toBottomOf="@id/txtPrecoCombo" />

    <TextView
        android:id="@+id/txtNomeBrownie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Thunder Brownie"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/imgBrownie"
        app:layout_constraintTop_toBottomOf="@id/txtPrecoBrownie" />

    <!-- Card Brownie -->

    <!-- Produtos -->
    <TextView
        android:id="@+id/txtProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produtos"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtNomeBrownie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- Produto: Big Five -->
    <LinearLayout
        android:id="@+id/cardBigFive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtProdutos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeBigFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Big Five"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDescBigFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Os cinco aperitivos mais pedidos da casa em um único prato."
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtPrecoBigFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 89,90"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBigFive"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/big_five"
            android:scaleType="centerCrop"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Produto: Hambúrguer da casa -->
    <LinearLayout
        android:id="@+id/cardHamburguer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardBigFive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeHamburguer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hambúrguer da casa"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDescHamburguer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hambúrguer com batata especial da casa"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtPrecoHamburguer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 79,90"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgHamburguer"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/hamburguer_casa"
            android:scaleType="centerCrop"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
